{
  "name": "that-be-delicious",
  "version": "0.0.2",
  "private": true,
  "engines": {
    "node": ">= 10.x"
  },
  "scripts": {
    "assets": "webpack -w --display-max-modules 0",
    "blowitallaway": "node ./data/load-sample-data.js --delete",
    "dev": "concurrently \"npm run watch\" \"npm run assets\" --names \"ðŸ¤–,ðŸ“¦\" --prefix name",
    "sample": "node ./data/load-sample-data.js",
    "start": "node ./start.js",
    "watch": "nodemon ./start.js --inspect --ignore public/"
  },
  "browserslist": "last 3 versions",
  "dependencies": {
    "axios": "^0.18.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.3",
    "dayjs": "^1.7.8",
    "dompurify": "^1.0.8",
    "dotenv": "^6.2.0",
    "es6-promisify": "^6.0.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "faker": "^4.1.0",
    "forever": "^0.15.3",
    "glob": "^7.1.3",
    "html-to-text": "^4.0.0",
    "jimp": "^0.6.0",
    "juice": "^5.1.0",
    "md5": "^2.2.1",
    "mongoose": "^5.4.2",
    "mongoose-mongodb-errors": "^0.0.2",
    "multer": "^1.4.1",
    "nodemailer": "^5.0.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "pug": "^2.0.3",
    "slugs": "^0.1.3",
    "uuid": "^3.3.2",
    "validator": "^10.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.4",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "babel-preset-env": "^1.7.0",
    "concurrently": "4.1.0",
    "css-loader": "^2.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "webpack": "^4.28.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": "airbnb-base",
    "plugins": [
      "import",
      "html",
      "markdown"
    ],
    "rules": {
      "func-names": "off",
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "res|next|^err"
        }
      ],
      "max-len": "off",
      "no-underscore-dangle": "off",
      "space-before-function-paren": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "semi": true,
    "tabWidth": 2,
    "plugins": [
      "all"
    ],
    "printWidth": 102
  }
}
