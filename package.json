{
  "name": "that-be-delicious",
  "version": "0.0.2",
  "private": true,
  "engines": {
    "node": ">= 10.x"
  },
  "scripts": {
    "assets": "webpack -w --display-max-modules 0",
    "blowitallaway": "node ./data/load-sample-data.js --delete",
    "dev": "concurrently \"yarn watch\" \"yarn assets\" --names \"ðŸ¤–,ðŸ“¦\" --prefix name",
    "sample": "node ./data/load-sample-data.js",
    "start": "node ./start.js",
    "watch": "nodemon ./start.js --inspect --ignore public/",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn snyk-protect"
  },
  "browserslist": "last 3 versions",
  "dependencies": {
    "axios": "^0.19.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "dayjs": "^1.8.16",
    "dompurify": "^2.0.3",
    "dotenv": "^8.1.0",
    "es6-promisify": "^6.0.2",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.2.0",
    "faker": "^4.1.0",
    "glob": "^7.1.4",
    "html-to-text": "^5.1.1",
    "jimp": "^0.8.4",
    "juice": "^5.2.0",
    "md5": "^2.2.1",
    "mongoose": "^5.7.1",
    "mongoose-mongodb-errors": "^0.0.2",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "pug": "^2.0.4",
    "slugs": "^0.1.3",
    "uuid": "^3.3.3",
    "validator": "^11.1.0",
    "snyk": "^1.228.5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^4.1.2",
    "css-loader": "^3.2.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-markdown": "^1.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpackbar": "^4.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "2018"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "eslint-config-prettier"
    ],
    "plugins": [
      "import",
      "html",
      "markdown"
    ],
    "rules": {
      "func-names": "off",
      "no-console": "warn",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "res|next|^err"
        }
      ],
      "max-len": "off",
      "no-underscore-dangle": "off",
      "space-before-function-paren": "off"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "plugins": [
      "all"
    ],
    "printWidth": 102,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "snyk": true
}
